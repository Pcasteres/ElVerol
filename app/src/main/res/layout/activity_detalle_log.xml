<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetalleLog.DetalleLogActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu" />
    <ImageView
        android:id="@+id/cuadradoreloj1"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/cuadrado" />
    <TextView
        android:id="@+id/elVerol"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/vogue"
        android:text="EL VEROL"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp" />
    <ImageView
        android:id="@+id/carrito"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="340dp"
        android:scaleType="fitXY"
        android:src="@drawable/carrito" />

    <ImageView
        android:id="@+id/reloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="98dp"
        android:scaleType="fitXY"
        android:src="@drawable/reloj1" />

    <TextView
        android:id="@+id/detallereloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/viceroy"
        android:text="Reloj de pared redondo decorativo

Diámetro: 30 cm

Estilo: vintage, números romanos

Diseño: rústico Country "
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>