<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaProductosNoLog.ListaProductosNoLogActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorFondo2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="@color/colorFondo2">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/menu"
                android:scaleType="fitXY"
                android:src="@drawable/menu" />

            <TextView
                android:id="@+id/elVerol"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/vogue"
                android:text="@string/Verol"
                android:layout_marginStart="90dp"
                android:textColor="@android:color/black"
                android:textSize="36sp" />
            <ImageView
                android:id="@+id/login"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/login" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <include layout="@layout/product_list" />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>