<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Carrito.CarritoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu" />

    <TextView
        android:id="@+id/elVerol"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/vogue"
        android:text="EL VEROL"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/objetos"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/vogue"
        android:text="Objeto"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <TextView
    android:id="@+id/cantidad"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="190dp"
    android:layout_marginTop="70dp"
    android:fontFamily="@font/vogue"
    android:text="Cantidad"
    android:textColor="@android:color/black"
    android:textSize="19sp" />
    <TextView
        android:id="@+id/precio"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/vogue"
        android:text="Precio"
        android:textColor="@android:color/black"
        android:textSize="19sp" />
    <Button
        android:id="@+id/finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/vogue"
        android:text="Finalizar"
        android:textSize="18sp" />

    <Button
        android:id="@+id/continuarcompra"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/vogue"
        android:text="Continuar compra"
        android:textSize="18sp" />
    <Button
        android:id="@+id/eliminararticulo"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/vogue"
        android:text="Eliminar"
        android:textSize="18sp" />
</FrameLayout>